<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text=" Enter Your Verification Code "
        android:textColor="@color/blue_button"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:layout_above="@id/tv2"/>


    <Button
        android:id="@+id/verify_now_button_mobile_verification_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Verify Now "
        android:layout_above="@id/view"
        android:background="@drawable/rounded_blue_button"
        android:textStyle="normal"
        android:textColor="@color/text_color"
        android:padding="5dp"
        />

    <EditText
        android:id="@+id/mobileno_edit_verification_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="7dp"
        android:background="@drawable/rounded_edit_text"
        android:hint=" +91 - "
        android:layout_above="@id/verify_now_button_mobile_verification_activity"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text=" Enter Your Mobile Number "
        android:textColor="#196799"
        android:layout_above="@id/mobileno_edit_verification_activity"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_below="@id/tv2"
        android:text="This is just a 4 digit number you must\nhave received on your mobile number"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/username_edit_verification_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="7dp"
        android:layout_below="@id/tv3"
        android:background="@drawable/rounded_edit_text"/>

    <Button
        android:id="@+id/confirm_verification_button_mobile_verification_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Confirm my verification "
        android:layout_below="@id/username_edit_verification_activity"
        android:background="@drawable/rounded_blue_button"
        android:textColor="@color/text_color"
        android:padding="5dp"
        />

</RelativeLayout>