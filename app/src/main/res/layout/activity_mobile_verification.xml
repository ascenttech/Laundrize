<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_with_name"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large_triple"
        android:layout_marginRight="@dimen/margin_large_triple"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_below="@id/logo"
        >

        <com.ascenttechnovation.laundrize.custom.CustomTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text=" Enter Your Mobile Number "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginBottom="@dimen/margin_large"
            android:textColor="@color/activity_static_text"
            />

        <com.ascenttechnovation.laundrize.custom.CustomEditText
            android:id="@+id/mobileno_edit_verification_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" +91 - "
            android:padding="@dimen/padding_large"
            android:layout_marginBottom="@dimen/margin"
            android:background="@drawable/rounded_edit_text"
            >
            <requestFocus/>
            </com.ascenttechnovation.laundrize.custom.CustomEditText>

        <com.ascenttechnovation.laundrize.custom.CustomButton
            android:id="@+id/verify_now_button_mobile_verification_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Verify Now "
            android:padding="@dimen/padding_large"
            android:background="@drawable/rounded_blue_button"
            android:textColor="@color/text_color_white"
            android:layout_marginLeft="@dimen/margin_large_thirty_five"
            android:layout_marginRight="@dimen/margin_large_thirty_five"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_gravity="center_horizontal"
            />


        <View
            android:id="@+id/horizontal_line"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            />

        <com.ascenttechnovation.laundrize.custom.CustomTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text=" Enter Your Verification Code "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginBottom="@dimen/margin_large"
            android:textColor="@color/activity_static_text"
            android:layout_marginTop="@dimen/margin_large"
            />

        <com.ascenttechnovation.laundrize.custom.CustomTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text=" This is just a 4 digit number you must have received on your mobile number "
            android:layout_marginBottom="@dimen/margin_large"
            android:textColor="@color/text_color_black"
            android:layout_marginTop="@dimen/margin_large"
            />

        <com.ascenttechnovation.laundrize.custom.CustomTextView
            android:id="@+id/tv2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Enter Your Verification Code "
            android:padding="@dimen/padding_large"
            android:background="@drawable/rounded_edit_text"
            android:inputType="textPassword"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin"
            />



        <com.ascenttechnovation.laundrize.custom.CustomButton
            android:id="@+id/confirm_verification_button_mobile_verification_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Confirm my verification "
            android:background="@drawable/rounded_blue_button"
            android:textColor="@color/text_color_white"
            android:layout_marginLeft="@dimen/margin_large_thirty_five"
            android:layout_marginRight="@dimen/margin_large_thirty_five"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/padding_large"
            />



    </LinearLayout>


</RelativeLayout>


