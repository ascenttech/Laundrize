<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text=" Enter Your Mobile Number "
        android:textColor="#00796B"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/mobileno_edit_verification_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" +91 - "
        android:gravity="center"
        android:layout_centerInParent="true"
        android:radius="5dp"/>

    <Button
        android:id="@+id/verify_button_verification_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Verify Now "
        android:gravity="center"
        android:layout_centerInParent="true"
        style="@style/ButtonText"
        android:background="#00796B"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text=" Enter Your Verification Code "
        android:textColor="#00796B"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="This is just a 4 digit number you must have\nreceived on your mobile number"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/username_edit_verification_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:radius="5dp"/>

    <Button
        android:id="@+id/confirm_button_verification_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Confirm my verification "
        android:gravity="center"
        android:layout_centerInParent="true"
        style="@style/ButtonText"
        android:background="#00796B"/>

</LinearLayout>