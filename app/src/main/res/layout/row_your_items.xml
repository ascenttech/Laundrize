<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding"
    >

    <ImageView
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:src="@drawable/baniyan"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:scaleType="fitCenter"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_gravity="bottom"
        >

        <com.ascenttechnovation.laundrize.custom.CustomTextView
            android:id="@+id/cloth_text_your_items"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" SHIRTS"
            android:textSize="@dimen/text_size_double_extra_small"
            />

        <com.ascenttechnovation.laundrize.custom.CustomTextView
            android:id="@+id/service_text_your_items"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_extra_small"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/add_image_your_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_add"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        />

    <com.ascenttechnovation.laundrize.custom.CustomTextView
        android:id="@+id/quantity_text_your_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text"
        android:textSize="@dimen/text_size"
        android:padding="@dimen/padding"
        android:layout_weight="2"
        android:layout_gravity="bottom"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/subtract_image_your_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_subtract"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        />

    <com.ascenttechnovation.laundrize.custom.CustomTextView
        android:id="@+id/total_text_your_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:padding="@dimen/padding"
        android:layout_weight="2"
        android:layout_gravity="bottom"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/remove_image_your_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        />


</LinearLayout>