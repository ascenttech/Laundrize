<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <CheckBox
        android:id="@+id/keepin_checkbox_signin_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Keep me logged in"
        android:layout_centerVertical="true"/>

    <EditText
        android:id="@+id/password_edit_signin_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" PASSWORD "
        android:padding="10dp"
        android:layout_margin="7dp"
        android:layout_above="@id/keepin_checkbox_signin_activity"
        android:background="@drawable/roundededittext"/>

    <EditText
        android:id="@+id/username_edit_signin_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" USERNAME "
        android:padding="10dp"
        android:layout_margin="7dp"
        android:background="@drawable/roundededittext"
        android:layout_above="@id/password_edit_signin_activity"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text=" Sign in to Laundrize "
        android:layout_above="@id/username_edit_signin_activity"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/facebook_button_signin_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Login Now "
        style="@style/ButtonText"
        android:layout_below="@id/keepin_checkbox_signin_activity"
        android:background="@drawable/roundedblackbutton"/>

    <View
        android:id="@+id/hr"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#FFFFFF"
        android:layout_below="@id/facebook_button_signin_activity"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text=" Forgot Your Password? "
        android:layout_below="@id/hr"
        android:paddingTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text=" Click Here "
        android:onClick="forgotpassword"
        android:clickable="true"
        android:textColor="#000000"
        android:layout_below="@+id/tv"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>