<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <com.ascenttechnovation.laundrize.custom.CustomEditText
        android:id="@+id/new_password_edit_forgot_password_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" ENTER NEW PASSWORD "
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:layout_margin="7dp"
        android:background="@drawable/rounded_edit_text"/>

    <com.ascenttechnovation.laundrize.custom.CustomEditText
        android:id="@+id/old_password_edit_forgot_password_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" ENTER VERIFICATION CODE "
        android:padding="10dp"
        android:layout_margin="7dp"
        android:layout_above="@id/new_password_edit_forgot_password_activity"
        android:background="@drawable/rounded_edit_text"/>

    <com.ascenttechnovation.laundrize.custom.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:layout_margin="7dp"
        android:text=" Generate New Password "
        android:textColor="#00796B"
        android:layout_above="@id/old_password_edit_forgot_password_activity"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <com.ascenttechnovation.laundrize.custom.CustomEditText
        android:id="@+id/confirm_password_edit_forgot_password_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" ENTER NEW PASSWORD AGAIN "
        android:padding="10dp"
        android:layout_margin="7dp"
        android:layout_below="@id/new_password_edit_forgot_password_activity"
        android:background="@drawable/rounded_edit_text"/>

    <include
        layout="@layout/include_single_button_in_the_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

</RelativeLayout>