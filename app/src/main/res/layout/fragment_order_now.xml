<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        >

        <Button
            android:id="@+id/place_order_button_order_now_fragment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="Place Order"
            android:background="@drawable/rounded_black_button"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/quick_order_button_order_now_fragment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="Quick Order"
            android:background="@drawable/rounded_black_button"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/weekly_order_button_order_now_fragment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="Weekly Order"
            android:background="@drawable/rounded_black_button"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/track_order_button_order_now_fragment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="Track Order"
            android:background="@drawable/rounded_blue_button"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/completed_order_button_order_now_fragment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="Completed Order"
            android:background="@drawable/rounded_blue_button"
            android:layout_margin="10dp"
            />



    </LinearLayout>

</RelativeLayout>