<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />

    <com.ascenttechnovation.laundrize.custom.CustomButton
        android:id="@+id/facebook_button_login_or_register_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Sign in with Facebook "
        android:background="@drawable/rounded_purple_button"
        android:layout_below="@id/horizontal_line_view_login_or_register_activity"
        android:textColor="@color/text_color_white"
        />



</FrameLayout>