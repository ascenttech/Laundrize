<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_large"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/order_details_track_order_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.tricerionservices.laundrize.custom.CustomTextView
            android:id="@+id/status_static_text_track_order_fragment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_extra_large"
            android:padding="@dimen/padding_small"
            android:textColor="@color/blue_button"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_below="@id/order_details_track_order_fragment"
        >

        <ImageView
            android:id="@+id/progress_indicator_image_track_order"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_track"
            />

        <include
            layout="@layout/include_order_progress_text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
        />


        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>

