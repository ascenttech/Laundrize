<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text=" Genrate New Password "
        android:textColor="#00796B"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/oldpassword_edit_password_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" NAME "
        android:gravity="center"
        android:layout_centerInParent="true"
        android:radius="5dp"/>

    <EditText
        android:id="@+id/newpassword_edit_password_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" NAME "
        android:gravity="center"
        android:layout_centerInParent="true"
        android:radius="5dp"/>

    <EditText
        android:id="@+id/confirmpassword_edit_password_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" NAME "
        android:gravity="center"
        android:layout_centerInParent="true"
        android:radius="5dp"/>

    <Button
        android:id="@+id/change_button_password_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" SIGN UP "
        android:gravity="center"
        android:layout_centerInParent="true"
        style="@style/ButtonText"
        android:background="#212121"/>
</LinearLayout>