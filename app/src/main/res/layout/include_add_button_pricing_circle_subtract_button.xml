<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.tricerionservices.laundrize.custom.CustomTextView
        android:id="@+id/title_text_included"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/five_dp"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/text_color_black"
        android:text="Tittle"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:ellipsize="end"
        android:maxLines="1"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/add_image_included"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_add"
            android:layout_alignParentBottom="true"
            />

        <FrameLayout
            android:id="@+id/price_and_quantity_layout_included"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/add_image_included"
            android:layout_alignParentBottom="true"
            >

            <com.tricerionservices.laundrize.custom.CustomTextView
                android:id="@+id/price_text_included"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_background_for_price"
                android:gravity="center"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <com.tricerionservices.laundrize.custom.CustomTextView
                android:id="@+id/quantity_text_included"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:background="@drawable/circle_background_for_quantity"
                />
        </FrameLayout>

        <ImageView
            android:id="@+id/subtract_image_included"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_subtract"
            android:layout_toLeftOf="@id/price_and_quantity_layout_included"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</LinearLayout>