<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/add_image_included"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_delete"
            android:layout_alignParentBottom="true"
            />

        <FrameLayout
            android:id="@+id/price_and_quantity_layout_included"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/add_image_included"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:id="@+id/price_text_included"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_background_for_price"
                android:text="100"
                android:gravity="center"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/quantity_text_included"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="#FFF"
                android:text="5"
                android:textSize="20dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:background="@drawable/circle_background_for_quantity"
                />
        </FrameLayout>

        <ImageView
            android:id="@+id/subtract_image_included"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_delete"
            android:layout_toLeftOf="@id/price_and_quantity_layout_included"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</LinearLayout>