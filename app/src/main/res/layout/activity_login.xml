<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <CheckBox
        android:id="@+id/keep_logged_in_checkbox_log_in_now_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Keep me logged in"
        android:layout_centerVertical="true"/>

    <com.ascenttechnovation.laundrize.custom.CustomEditText
        android:id="@+id/password_edit_log_in_now_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_activity_hint_password"
        android:padding="10dp"
        android:layout_margin="7dp"
        android:layout_above="@id/keep_logged_in_checkbox_log_in_now_activity"
        android:background="@drawable/rounded_edit_text"/>

    <com.ascenttechnovation.laundrize.custom.CustomEditText
        android:id="@+id/username_edit_log_in_now_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint= "@string/login_activity_hint_number"
        android:padding="10dp"
        android:layout_margin="7dp"
        android:background="@drawable/rounded_edit_text"
        android:layout_above="@id/password_edit_log_in_now_activity"/>

    <com.ascenttechnovation.laundrize.custom.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text=" Sign in to Laundrize "
        android:layout_above="@id/username_edit_log_in_now_activity"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.ascenttechnovation.laundrize.custom.CustomButton
        android:id="@+id/log_in_now_button_log_in_now_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_actvity_button_text"
        android:layout_below="@id/keep_logged_in_checkbox_log_in_now_activity"
        android:background="@drawable/rounded_black_button"
        android:textColor="@color/text_color_white"
        />

    <View
        android:id="@+id/hr"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#FFFFFF"
        android:layout_below="@id/log_in_now_button_log_in_now_activity"/>

    <com.ascenttechnovation.laundrize.custom.CustomTextView
        android:id="@+id/forgot_password_static_text_log_in_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text=" Forgot Your Password? "
        android:layout_below="@id/hr"
        android:paddingTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.ascenttechnovation.laundrize.custom.CustomTextView
        android:id="@+id/click_here_static_text_log_in_now_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text=" Click Here "
        android:onClick="forgotpassword"
        android:clickable="true"
        android:textColor="#000000"
        android:layout_below="@+id/forgot_password_static_text_log_in_now"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>