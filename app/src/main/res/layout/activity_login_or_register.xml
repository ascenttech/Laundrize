<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <View
        android:id="@+id/horizontal_line_view_login_or_register_activity"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#FFFFFF"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        />
    <Button
        android:id="@+id/register_now_button_login_or_register_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Register Now "
        android:background="@drawable/rounded_blue_button"
        android:layout_above="@id/horizontal_line_view_login_or_register_activity"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/sign_in_now_button_login_or_register_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Sign in Now "
        android:background="@drawable/rounded_black_button"
        android:layout_above="@id/register_now_button_login_or_register_activity"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/facebook_button_login_or_register_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Sign in with Facebook "
        android:background="@drawable/rounded_purple_button"
        android:layout_below="@id/horizontal_line_view_login_or_register_activity"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/google_button_login_or_register_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Sign in with Google + "
        android:background="@drawable/rounded_red_button"
        android:layout_below="@id/facebook_button_login_or_register_activity"
        android:layout_margin="10dp"/>
</RelativeLayout>